<%- contentFor('content') %>
<div class="tools-page">
    <section class="tools-header">
        <h1><%= categoryName %> Tools</h1>
        <p>Browse our collection of <%= categoryName.toLowerCase() %> tools</p>
    </section>

    <!-- Category Tabs -->
    <section class="category-tabs">
        <div class="tabs-container">
            <button class="category-tab <%= categoryName === 'Text to Speech' ? 'active' : '' %>" data-category="textToSpeech">
                <i class="fas fa-microphone"></i>
                Text to Speech
            </button>
            <button class="category-tab <%= categoryName === 'Speech to Text' ? 'active' : '' %>" data-category="speechToText">
                <i class="fas fa-keyboard"></i>
                Speech to Text
            </button>
            <button class="category-tab <%= categoryName === 'Audio Editing' ? 'active' : '' %>" data-category="audioEditing">
                <i class="fas fa-cut"></i>
                Audio Editing
            </button>
            <button class="category-tab <%= categoryName === 'Music Generation' ? 'active' : '' %>" data-category="musicGeneration">
                <i class="fas fa-music"></i>
                Music Generation
            </button>
            <button class="category-tab <%= categoryName === 'Voice Cloning' ? 'active' : '' %>" data-category="voiceCloning">
                <i class="fas fa-user-voice"></i>
                Voice Cloning
            </button>
        </div>
    </section>

    <section class="all-tools">
        <div id="allTools" class="tools-container">
            <!-- 工具卡片将通过 JavaScript 动态添加 -->
        </div>
    </section>
</div>

<style>
    .category-tab {
        cursor: pointer;
        padding: 10px 15px;
        margin: 0 5px;
        border: none;
        background-color: #f5f5f5;
        border-radius: 5px;
    }
    .category-tab.active {
        background-color: #007bff;
        color: white;
    }
    .no-tools {
        padding: 20px;
        text-align: center;
        font-size: 18px;
        color: #666;
    }
    .tool-card {
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 15px;
        margin: 15px 0;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .tool-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .tool-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    .tool-header h3 {
        margin: 0;
        color: #333;
    }
    .rating {
        background-color: #ffdd00;
        color: #333;
        padding: 3px 8px;
        border-radius: 20px;
        font-size: 14px;
    }
    .features ul {
        padding-left: 20px;
        margin-bottom: 15px;
    }
    .tool-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
    }
    .tool-meta {
        display: flex;
        gap: 10px;
    }
    .category, .price {
        background-color: #f0f0f0;
        color: #666;
        padding: 3px 8px;
        border-radius: 20px;
        font-size: 12px;
    }
    .visit-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }
    .visit-button:hover {
        background-color: #0056b3;
    }
    .tools-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }
    .fallback-tools {
        margin-top: 30px;
    }
    .tools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }
</style>

<script>
    // 设置当前分类
    // 直接使用数据键名，而不是用户可读的分类名称
    window.currentCategoryFromServer = '<%= categoryName %>';
    
    // 映射分类名称到键名
    window.categoryMap = {
        'Text to Speech': 'textToSpeech',
        'Speech to Text': 'speechToText',
        'Audio Editing': 'audioEditing',
        'Music Generation': 'musicGeneration',
        'Voice Cloning': 'voiceCloning'
    };
    
    // 直接设置键名
    window.currentCategory = window.categoryMap[window.currentCategoryFromServer] || 'textToSpeech';
    console.log('Category name from server:', window.currentCategoryFromServer);
    console.log('Mapped to category key:', window.currentCategory);
</script>
<script src="/js/category-tabs.js"></script> 
