<%- contentFor('content') %>
<div class="tools-page">
    <section class="tools-header">
        <h1><%= categoryName %> Tools</h1>
        <p>Browse our collection of <%= categoryName.toLowerCase() %> tools</p>
    </section>

    <section class="all-tools">
        <div class="tools-container">
            <% tools.forEach(tool => { %>
                <div class="tool-card">
                    <div class="tool-header">
                        <h3><%= tool.name %></h3>
                        <span class="rating"><%= tool.rating %> ‚≠ê</span>
                    </div>
                    <p class="description"><%= tool.description %></p>
                    <div class="features">
                        <h4>Key Features:</h4>
                        <ul>
                            <% tool.features.forEach(feature => { %>
                                <li><%= feature %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <div class="tool-meta">
                            <span class="category"><%= tool.category %></span>
                            <span class="price"><%= tool.price %></span>
                        </div>
                        <a href="<%= tool.url %>" target="_blank" class="visit-button">
                            <i class="fas fa-external-link-alt"></i>
                            Visit Website
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
</div> 
