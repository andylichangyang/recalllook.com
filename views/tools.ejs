<%- contentFor('content') %>
<!-- Tools Header -->
<div class="tools-page">
    <section class="tools-header">
        <h1>All AI Voice Tools</h1>
        <p>Browse our comprehensive collection of AI voice tools</p>
    </section>

    <!-- Category Tabs -->
    <section class="category-tabs">
        <div class="tabs-container">
            <button class="category-tab" data-category="textToSpeech">
                <i class="fas fa-microphone"></i>
                Text to Speech
            </button>
            <button class="category-tab" data-category="speechToText">
                <i class="fas fa-keyboard"></i>
                Speech to Text
            </button>
            <button class="category-tab" data-category="audioEditing">
                <i class="fas fa-cut"></i>
                Audio Editing
            </button>
            <button class="category-tab" data-category="musicGeneration">
                <i class="fas fa-music"></i>
                Music Generation
            </button>
            <button class="category-tab" data-category="voiceCloning">
                <i class="fas fa-user-voice"></i>
                Voice Cloning
            </button>
        </div>
    </section>

    <!-- All Tools Section -->
    <section class="all-tools">
        <div id="allTools" class="tools-container">
            <!-- 工具卡片将通过 JavaScript 动态添加 -->
        </div>
    </section>
</div>

<script src="/js/main.js"></script> 
