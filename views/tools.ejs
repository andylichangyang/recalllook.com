<%- contentFor('content') %>
<!-- Tools Header -->
<div class="tools-page">
    <section class="tools-header">
        <h1>All AI Voice Tools</h1>
        <p>Browse our comprehensive collection of AI voice tools</p>
    </section>

    <!-- Category Tabs -->
    <section class="category-tabs">
        <div class="tabs-container">
            <a href="/tools/category/text-to-speech" class="category-tab">
                <i class="fas fa-microphone"></i>
                Text to Speech
            </a>
            <a href="/tools/category/speech-to-text" class="category-tab">
                <i class="fas fa-keyboard"></i>
                Speech to Text
            </a>
            <a href="/tools/category/audio-editing" class="category-tab">
                <i class="fas fa-cut"></i>
                Audio Editing
            </a>
            <a href="/tools/category/music-generation" class="category-tab">
                <i class="fas fa-music"></i>
                Music Generation
            </a>
            <a href="/tools/category/voice-cloning" class="category-tab">
                <i class="fas fa-user-voice"></i>
                Voice Cloning
            </a>
        </div>
    </section>

    <!-- All Tools Section -->
    <section class="all-tools">
        <div id="allTools" class="tools-container">
            <% tools.textToSpeech.forEach(tool => { %>
                <div class="tool-card">
                    <div class="tool-header">
                        <h3><%= tool.name %></h3>
                        <span class="rating"><%= tool.rating %> ⭐</span>
                    </div>
                    <p class="description"><%= tool.description %></p>
                    <div class="features">
                        <h4>Key Features:</h4>
                        <ul>
                            <% tool.features.forEach(feature => { %>
                                <li><%= feature %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <div class="tool-meta">
                            <span class="category"><%= tool.category %></span>
                            <span class="price"><%= tool.price %></span>
                        </div>
                        <a href="<%= tool.url %>" target="_blank" class="visit-button">
                            <i class="fas fa-external-link-alt"></i>
                            Visit Website
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
</div>

<script>
    // 将工具数据传递给客户端
    window.toolsData = <%- JSON.stringify(tools) %>;
</script>
<script src="/js/tools.js"></script> 
