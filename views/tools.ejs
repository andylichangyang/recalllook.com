<%- contentFor('content') %>
<!-- Tools Header -->
<div class="tools-page">
    <section class="tools-header">
        <h1>All AI Voice Tools</h1>
        <p>Browse our comprehensive collection of AI voice tools</p>
    </section>

    <!-- Category Tabs -->
    <section class="category-tabs">
        <div class="tabs-container">
            <button class="category-tab active" data-category="Text to Speech">
                <i class="fas fa-microphone"></i>
                Text to Speech
            </button>
            <button class="category-tab" data-category="Speech to Text">
                <i class="fas fa-keyboard"></i>
                Speech to Text
            </button>
            <button class="category-tab" data-category="Audio Editing">
                <i class="fas fa-cut"></i>
                Audio Editing
            </button>
            <button class="category-tab" data-category="Music Generation">
                <i class="fas fa-music"></i>
                Music Generation
            </button>
            <button class="category-tab" data-category="Voice Cloning">
                <i class="fas fa-user-voice"></i>
                Voice Cloning
            </button>
        </div>
    </section>

    <!-- All Tools Section -->
    <section class="all-tools">
        <div id="allTools" class="tools-container">
            <% tools.textToSpeech.forEach(tool => { %>
                <div class="tool-card">
                    <div class="tool-header">
                        <h3><%= tool.name %></h3>
                        <span class="rating"><%= tool.rating %> ⭐</span>
                    </div>
                    <p class="description"><%= tool.description %></p>
                    <div class="features">
                        <h4>Key Features:</h4>
                        <ul>
                            <% tool.features.forEach(feature => { %>
                                <li><%= feature %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <div class="tool-meta">
                            <span class="category"><%= tool.category %></span>
                            <span class="price"><%= tool.price %></span>
                        </div>
                        <a href="<%= tool.url %>" target="_blank" class="visit-button">
                            <i class="fas fa-external-link-alt"></i>
                            Visit Website
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const categoryTabs = document.querySelectorAll('.category-tab');
    const allToolsContainer = document.getElementById('allTools');
    const tools = <%- JSON.stringify(tools) %>;

    categoryTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            const category = tab.dataset.category;
            const categoryKey = category.toLowerCase().replace(/\s+/g, '');
            
            // Remove active class from all tabs
            categoryTabs.forEach(t => t.classList.remove('active'));
            // Add active class to clicked tab
            tab.classList.add('active');

            // Clear container
            allToolsContainer.innerHTML = '';
            
            // Render tools for selected category
            tools[categoryKey].forEach(tool => {
                const toolCard = document.createElement('div');
                toolCard.className = 'tool-card';
                toolCard.innerHTML = `
                    <div class="tool-header">
                        <h3>${tool.name}</h3>
                        <span class="rating">${tool.rating} ⭐</span>
                    </div>
                    <p class="description">${tool.description}</p>
                    <div class="features">
                        <h4>Key Features:</h4>
                        <ul>
                            ${tool.features.map(feature => `<li>${feature}</li>`).join('')}
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <div class="tool-meta">
                            <span class="category">${tool.category}</span>
                            <span class="price">${tool.price}</span>
                        </div>
                        <a href="${tool.url}" target="_blank" class="visit-button">
                            <i class="fas fa-external-link-alt"></i>
                            Visit Website
                        </a>
                    </div>
                `;
                allToolsContainer.appendChild(toolCard);
            });
        });
    });
});
</script> 
